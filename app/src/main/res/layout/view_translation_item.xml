<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dashboard_item_height"
    android:padding="10dp"
    android:background="@drawable/dashboard_item_background"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/translation_index_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/translation_source_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dashboard_item_title_margin_top"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        android:textSize="15sp" />

</FrameLayout>